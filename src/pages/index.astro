---
import Layout from "../layouts/Page.astro";
import Container from "../components/Container.astro";
import SignupForm from "../components/SignupForm.astro";
import InsightsSwiper from "../components/react/InsightsSwiper";
const seo = {
  title: "Acamunity Landingpage - Coming Soon",
  description:
    "Acamunity is a community of students and young professionals who are passionate about the future of work and education. We are building a platform to connect, learn and grow together.",
};
---

<style>
  .hero__article {
    margin-top: 5rem;
    margin-bottom: 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }
</style>

<Layout seo={seo}>
  <Container narrow>
    <article class="hero__article">
      <h1 class="fade-in" style="margin-bottom: 2rem;">
        Join the conversation that matters.
      </h1>
      <h2 class="fade-in" style="margin-bottom: 2rem;">
        Stay informed with our newsletter,
      </h2>
      <p class="fade-in" style="margin-bottom: 1rem;">
        connecting academia's brightest minds.
      </p>
      <SignupForm />
    </article>
    <InsightsSwiper client:load />
  </Container>
</Layout>

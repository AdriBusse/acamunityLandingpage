---
import Layout from "../layouts/Page.astro";
import Container from "../components/Container.astro";
import SignupForm from "../components/SignupForm.astro";
import InsightsSwiper from "../components/react/InsightsSwiper";
const seo = {
  title: "Acamunity Landingpage - Coming Soon",
  description:
    "Acamunity is a community of students and young professionals who are passionate about the future of work and education. We are building a platform to connect, learn and grow together.",
};
---

<style>
  .hero__article {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    min-height: 50vh;
    text-align: center;
  }
</style>

<Layout seo={seo}>
  <Container narrow>
    <article class="hero__article">
      <h1 class="fade-in">Acamunity</h1>
      <h2 class="fade-in">Coming Soon</h2>
      <p class="fade-in">Be the first to know when our new site is live!</p>
      <SignupForm />
    </article>
    <InsightsSwiper client:load />
  </Container>
</Layout>

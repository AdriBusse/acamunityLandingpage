---
import Logo from "./Logos/Logo.astro";
---

<style>
  header {
    padding: 2rem 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .logo {
    width: 75%;
    @media screen and (max-width: 400px) {
      width: 90%;
    }
  }
</style>

<header>
  <div class="logo fade-in">
    <Logo />
  </div>
</header>
